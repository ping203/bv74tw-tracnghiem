@model MVC_CMS.Models.UserLogin
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @name = "LogOnForm" }))
{
    <div class="heading-h3">
        <h3>
        @ViewBag.ExamTitle
        </h3>
     </div>
    <p class="error-text">
        <font style="color: Red">
            @Html.ValidationSummary(true, "Đăng nhập thất bại! Hãy kiểm tra lỗi và thử lại.")
        </font>
    </p>
    <p>
        <label>
            Họ và tên</label>
        @Html.TextBoxFor(m => m.FullName, new { @class = "fl w250", @maxlength = "256" })
        <span class="requided">
            @Html.ValidationMessageFor(m => m.FullName, "*")</span>
    </p>
    <p>
        <label>
            SBD</label>
        @Html.TextBoxFor(m => m.SBD, new { @class = "fl w250", @maxlength = "256" })
        <span class="requided">
            @Html.ValidationMessageFor(m => m.SBD, "*") </span>
    </p>
    <div class="button-large">
        <input type="submit" value="Xác nhận" />
    </div>

}
